<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/enterbackground"
    tools:context=".feature.fragment.selectionFragment.SelectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#424340">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="30sp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/welcomeText"
                style="@style/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12sp"
                android:text="Please Continue with your Choice"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/welcomeText"
                android:layout_marginTop="38sp"
                style="@style/montserrat_bold"
                android:text="Join"
                android:backgroundTint="@color/logButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/LoginText"
                style="@style/montserrat_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join a Construction Site"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnJoin"
                android:layout_marginTop="6sp"/>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/LoginText"
                android:layout_marginTop="18sp"
                style="@style/montserrat_bold"
                android:text="Create"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/logButton"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/registerText"
                style="@style/montserrat_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a New Construction Site"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnCreate"
                android:layout_marginTop="8sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>