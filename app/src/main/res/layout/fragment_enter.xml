<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enterbackground"
    tools:context=".feature.fragment.enterfragment.EnterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#424340">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="38sp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/welcome"
                style="@style/montserrat_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/welcomeText"
                style="@style/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please login with your information"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/welcome" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/welcomeText"
                android:layout_marginTop="38sp"
                style="@style/montserrat_bold"
                android:text="LOG IN"
                android:backgroundTint="@color/logButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/LoginText"
                style="@style/montserrat_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have already an account"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnLogin"
                android:layout_marginTop="6sp"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/LoginText"
                android:layout_marginTop="18sp"
                style="@style/montserrat_bold"
                android:text="SIGN UP"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/logButton"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/registerText"
                style="@style/montserrat_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont Have an Account?"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnRegister"
                android:layout_marginTop="8sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>